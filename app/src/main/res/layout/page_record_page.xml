<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.king.app.tcareer.page.record.page.RecordViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.king.app.tcareer.view.widget.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:transitionName="@string/anim_user_page_head"
            android:src="@drawable/default_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:playerHeadUrl="@{model.userImageUrl}"/>
        <com.king.app.tcareer.view.widget.CircleImageView
            android:id="@+id/iv_player"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:transitionName="@string/anim_player_page_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_user"
            app:playerHeadUrl="@{model.competitorImageUrl}"/>
        <TextView
            android:id="@+id/tv_score_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{model.setScoreText}"
            android:textSize="46dp"
            android:textColor="@color/actionbar_bk_blue"
            app:layout_constraintStart_toEndOf="@id/iv_user"
            app:layout_constraintEnd_toStartOf="@id/iv_player"
            app:layout_constraintTop_toTopOf="@id/iv_user"
            app:layout_constraintBottom_toBottomOf="@id/iv_user"/>
        <TextView
            android:id="@+id/tv_rs_user"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dp"
            android:text="@{model.userText}"
            app:layout_constraintTop_toTopOf="@+id/tv_h2h"
            app:layout_constraintBottom_toBottomOf="@+id/tv_h2h"
            app:layout_constraintStart_toStartOf="@id/iv_user"
            app:layout_constraintEnd_toEndOf="@id/iv_user"/>
        <TextView
            android:id="@+id/tv_rs_player"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="@{model.competitorText}"
            app:layout_constraintTop_toTopOf="@+id/tv_h2h"
            app:layout_constraintBottom_toBottomOf="@+id/tv_h2h"
            app:layout_constraintStart_toStartOf="@id/iv_player"
            app:layout_constraintEnd_toEndOf="@id/iv_player"/>
        <TextView
            android:id="@+id/tv_h2h"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="@{model.h2hText}"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/iv_user"
            app:layout_constraintStart_toEndOf="@+id/tv_rs_user"
            app:layout_constraintEnd_toStartOf="@+id/tv_rs_player"/>
        <TextView
            android:id="@+id/tv_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:text="@{model.recordRoundText}"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_h2h"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="@{model.recordScoreText}"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_round"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.matchLevelText}"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_round"
            app:layout_constraintStart_toStartOf="@id/tv_round"/>
        <TextView
            android:id="@+id/tv_level_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@{model.levelCountText}"
            app:layout_constraintBottom_toBottomOf="@id/tv_level"
            app:layout_constraintEnd_toEndOf="@id/tv_score"/>
        <TextView
            android:id="@+id/tv_court"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.matchCourtText}"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_level"
            app:layout_constraintStart_toStartOf="@id/tv_round"/>
        <TextView
            android:id="@+id/tv_court_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@{model.courtCountText}"
            app:layout_constraintBottom_toBottomOf="@id/tv_court"
            app:layout_constraintEnd_toEndOf="@id/tv_score"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@{model.matchDateText}"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_court"
            app:layout_constraintStart_toStartOf="@id/tv_round"/>
        <TextView
            android:id="@+id/tv_match_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="View match page"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toEndOf="@id/tv_score"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_records"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</layout>