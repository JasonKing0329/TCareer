<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_player1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:srcCompat="@drawable/ic_def_player_head" />
    <ImageView
        android:id="@+id/iv_player2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_player1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_def_player_head" />

    <TextView
        android:id="@+id/tv_player1"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:text="S.Stephens"
        android:textColor="@color/text_normal"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1"
        app:layout_constraintStart_toEndOf="@+id/iv_player1"
        app:layout_constraintTop_toTopOf="@+id/iv_player1" />

    <TextView
        android:id="@+id/tv_player2"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:text="S.Stephens"
        android:textColor="@color/text_normal"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player2"
        app:layout_constraintStart_toEndOf="@+id/iv_player2"
        app:layout_constraintTop_toTopOf="@+id/iv_player2" />

    <LinearLayout
        android:id="@+id/ll_score1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_player1"
        app:layout_constraintTop_toTopOf="@+id/iv_player1"/>

    <LinearLayout
        android:id="@+id/ll_score2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_player2"
        app:layout_constraintTop_toTopOf="@+id/iv_player2"/>

    <TextView
        android:id="@+id/tv_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />
</android.support.constraint.ConstraintLayout>