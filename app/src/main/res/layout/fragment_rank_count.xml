<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.king.app.tcareer.page.rank.RankCountViewModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Current"
                    style="@style/TvRankCountTitle" />
                <TextView
                    android:id="@+id/tv_current"
                    style="@style/TvRankCountValue"
                    android:text="@{model.currentRankText}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/rank_count_top">
                <TextView
                    style="@style/TvRankCountTitle"
                    android:text="Highest"/>
                <TextView
                    android:id="@+id/tv_high"
                    style="@style/TvRankCountValue"
                    android:text="@{model.highestRankText}" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{model.isTop1Visibility}">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/rank_count_top">
                    <TextView
                        style="@style/TvRankCountTitle"
                        android:text="Top 1 week"/>
                    <TextView
                        android:id="@+id/tv_top1"
                        style="@style/TvRankCountValue"
                        android:text="@{model.top1WeeksText}" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/rank_count_top">
                    <TextView
                        style="@style/TvRankCountTitle"
                        android:text="Longest sequence"/>
                    <TextView
                        android:id="@+id/tv_longest"
                        style="@style/TvRankCountValue"
                        android:text="@{model.top1LongestText}" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Condition"
                android:textAllCaps="false"/>
            <LinearLayout
                android:id="@+id/group_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/rank_count_top">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank"/>
                    <EditText
                        android:id="@+id/et_min"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/et_max"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:inputType="number"/>
                    <Button
                        android:id="@+id/btn_condition_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Ok"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/rank_count_top">
                    <TextView
                        style="@style/TvRankCountTitle"
                        android:text="Total weeks"/>
                    <TextView
                        android:id="@+id/tv_cond_total"
                        style="@style/TvRankCountValue"
                        android:text="@{model.contitionTotalText}" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/rank_count_top">
                    <TextView
                        style="@style/TvRankCountTitle"
                        android:text="Longest sequence"/>
                    <TextView
                        android:id="@+id/tv_cond_longest"
                        style="@style/TvRankCountValue"
                        android:text="@{model.contitionLongestText}" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>