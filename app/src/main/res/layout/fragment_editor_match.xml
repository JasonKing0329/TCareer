<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.king.app.tcareer.page.record.editor.EditorViewModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/app_list_corner_round"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/match" />

                <ImageView
                    android:id="@+id/iv_change"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ripple_white"
                    android:padding="5dp"
                    android:src="@drawable/ic_flight_takeoff_yellow_700_36dp" />

                <TextView
                    android:id="@+id/tv_match_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{model.matchNameText}"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recent_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_gravity="right"/>

            <RelativeLayout
                android:id="@+id/rl_match"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:visibility="@{model.matchVisibility}"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_match_image"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    app:matchUrl="@{model.matchImageUrl}" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#99000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@{model.matchCountryText}"
                        android:textColor="@color/tab_actionbar_text_focus" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv_country"
                        android:text="@{model.matchCityText}"
                        android:textColor="@color/tab_actionbar_text_focus" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_country"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@{model.matchLevelText}"
                        android:textColor="@color/tab_actionbar_text_focus" />

                    <TextView
                        android:id="@+id/tv_court"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_country"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tv_level"
                        android:text="@{model.matchCourtText}"
                        android:textColor="@color/tab_actionbar_text_focus" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/record_editor_item_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/sp_round"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/record_editor_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/score" />

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.scoreText}"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_winner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/record_editor_item_height"
                    android:gravity="center_vertical"
                    android:visibility="@{model.winnerVisibility}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/winner" />

                    <TextView
                        android:id="@+id/tv_winner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.winnerText}"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>