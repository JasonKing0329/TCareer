<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.home.HomeActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:elevation="0dp"
            android:theme="@style/HomeTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/ctl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="?attr/colorPrimary"
                app:scrimVisibleHeightTrigger="@dimen/home_scrim_visible_height"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_head_height"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_home_3f51b5_24dp"
                    app:popupTheme="@style/HomeTheme.PopupOverlay" />
            </android.support.design.widget.CollapsingToolbarLayout>


        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_home"
            app:layout_behavior="com.king.app.tcareer.page.home.HomeBehavior"
            tools:context=".page.home.HomeActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/group_record"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/iv_record_bk"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:siRadius="5dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:transitionName="@string/anim_home_date"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_match_round"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Semi Final"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/tv_match_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:text="印第安维尔斯大师赛"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/group_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="120dp"
                        android:src="@drawable/pic_player"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New record"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Players"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="16dp"/>
                <LinearLayout
                    android:id="@+id/group_player"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_players"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:overScrollMode="never"
                        app:cardWidth="120dp"
                        app:cardsGap="12dp"
                        app:layoutManager="com.king.app.tcareer.view.widget.cardslider.CardSliderLayoutManager"
                        app:viewUpdater="com.king.app.tcareer.page.player.slider.SlideUpdater"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_expand_right"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Matches"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="16dp"/>
                <LinearLayout
                    android:id="@+id/group_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <com.king.app.tcareer.view.widget.discrete.DiscreteScrollView
                        android:id="@+id/dsv_match"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_glory"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_glory"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="14dp"
                        android:text="Champions, GS, Runner-ups"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/group_chart"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:transitionName="@string/anim_home_rank"
                    android:layout_height="@dimen/rank_chart_height"/>

                <FrameLayout
                    android:id="@+id/group_chart_week"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transitionName="@string/anim_home_rank_week"/>

                <LinearLayout
                    android:id="@+id/group_h2h"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_score"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="14dp"
                        android:text="View Head to head list"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="2dp"
            app:bmb_normalColor="@color/colorAccent"
            app:bmb_buttonRadius="@dimen/boom_menu_btn_radius"
            app:bmb_piecePlaceEnum="piecePlace_dot_4_1"
            app:bmb_buttonPlaceEnum="buttonPlace_vertical"
            app:bmb_buttonEnum="textInsideCircle"/>

    </android.support.design.widget.CoordinatorLayout>

</layout>
