<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.king.app.tcareer.page.score.ScoreViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_basic"
            android:layout_width="0dp"
            android:layout_height="@dimen/player_basic_head_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_flag_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flag_france"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.countryText}"
                    android:textSize="20dp"
                    android:textColor="#e9ffe4"
                    android:layout_marginTop="50dp"/>
                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.birthdayText}"
                    android:textSize="20dp"
                    android:textColor="#e1ffff"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.heightText}"
                    android:textSize="16dp"
                    android:textColor="#e6f7ff"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tv_match_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.matchCountText}"
                    android:textSize="17dp"
                    android:textColor="#ababc3"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@{model.nameText}"
                android:textSize="27dp"
                android:textColor="#f9f0f1"
                android:shadowColor="#4d3279"
                android:shadowRadius="3"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_player"
                android:layout_marginTop="10dp"
                android:visibility="@{model.totalScoreVisibility}"
                android:text="@{model.totalScoreText}"
                android:textSize="25dp"
                android:textColor="#e2e0f6"
                android:background="@drawable/shape_score_total_bg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_flag_bg"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="40dp"
                android:text="@{model.rankText}"
                android:textSize="35dp"
                android:textColor="#f9f0f1"
                android:shadowColor="#ffff00"
                android:shadowRadius="5" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_group_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rl_basic"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tv_by_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Level"
                android:textColor="@drawable/selector_score_group_by_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "/>
            <TextView
                android:id="@+id/tv_by_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Month"
                android:textColor="@drawable/selector_score_group_by_text"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_score_list"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/ll_group_by"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_court"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/rv_score_list"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_year"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:layout_constraintTop_toBottomOf="@id/chart_court"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:id="@+id/group_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/view7_datebar_height"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_date_last"
                    android:layout_width="@dimen/view7_datebar_height"
                    android:layout_height="@dimen/view7_datebar_height"
                    android:padding="@dimen/view7_actionbar_action_icon_padding"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_navigate_before_yellow_a700_36dp" />
                <TextView
                    android:id="@+id/tv_year_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/tab_actionbar_text_focus"
                    android:text="2017"/>
                <ImageView
                    android:id="@+id/iv_date_next"
                    android:layout_width="@dimen/view7_datebar_height"
                    android:layout_height="@dimen/view7_datebar_height"
                    android:padding="@dimen/view7_actionbar_action_icon_padding"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_navigate_next_yellow_a700_36dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>