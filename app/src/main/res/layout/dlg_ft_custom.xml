<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_dialog"
    style="@style/CustomDialogFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="@dimen/custom_dialog_toolbar_icon"
                android:layout_height="@dimen/custom_dialog_toolbar_icon"
                android:visibility="gone"
                android:src="@drawable/dialog_title_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/custom_dialog_title_text"
                android:textSize="@dimen/custom_dialog_title_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/iv_search"
            style="@style/CustomDialogIcon_L"
            android:src="@drawable/ic_search_white_36dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_play"
            style="@style/CustomDialogIcon_L"
            android:layout_marginRight="@dimen/dialog_icon_right"
            android:src="@drawable/ic_play_arrow_white_36dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_ok"
            style="@style/CustomDialogIcon_L"
            android:layout_marginRight="@dimen/dialog_icon_right"
            android:src="@drawable/ic_check_white_36dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_save"
            style="@style/CustomDialogIcon_L"
            android:layout_marginRight="@dimen/dialog_icon_right"
            android:src="@drawable/ic_save_white_36dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_close"
            style="@style/CustomDialogIcon_L"
            android:src="@drawable/ic_close_white_36dp"
            android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/group_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_margin="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dialog_search_height"
            android:background="@drawable/custom_dialog_search_bk_normal"
            android:paddingLeft="17dp" />

        <ImageView
            android:id="@+id/iv_search_close"
            android:layout_width="@dimen/custom_dialog_toolbar_icon"
            android:layout_height="@dimen/custom_dialog_toolbar_icon"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_close_grey_600_36dp" />
    </FrameLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/group_ft_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_null_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/no_content"
        android:visibility="gone" />
</LinearLayout>
