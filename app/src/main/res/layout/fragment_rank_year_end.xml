<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:text="Rank of Year"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<HorizontalScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/rank_chart_height"
		android:layout_marginTop="8dp"
		android:scrollbars="none"
		app:layout_constraintTop_toBottomOf="@+id/tv_title"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<com.king.app.tcareer.view.widget.chart.BarChart
			android:id="@+id/bar_chart_rank"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/rank_chart_height"
			android:paddingTop="@dimen/margin_10"
			android:paddingBottom="15dp"
			android:transitionName="@string/anim_home_rank"
			app:axisXExtendLineWidth="20dp"
			app:barGap="16dp"
			app:barWidth="30dp" />
	</HorizontalScrollView>

</LinearLayout>