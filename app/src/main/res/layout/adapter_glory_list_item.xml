<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="bean"
            type="com.king.app.tcareer.page.glory.bean.GloryRecordItem"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:visibility="@{bean.titleVisibility}"
            android:text="@{bean.title}"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="500th"/>

        <com.king.app.tcareer.view.widget.rc.RCConstraintLayout
            android:id="@+id/group_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:round_corner="8dp">

            <ImageView
                android:id="@+id/iv_match"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/tv_title"
                android:scaleType="fitXY"
                app:matchUrl="@{bean.matchImageUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#55000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_seq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@{bean.index}"
                android:visibility="@{bean.indexVisibility}"
                android:textColor="@color/h2hlist_color_win"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="15"/>

            <TextView
                android:id="@+id/tv_lose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:visibility="@{bean.loseVisibility}"
                android:text="lose"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/shape_round_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@{bean.matchName}"
                android:textColor="@color/glory_item_text"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/group_competitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_name"
                app:layout_constraintStart_toStartOf="parent">
                <com.king.app.tcareer.view.widget.rc.RCImageView
                    android:id="@+id/iv_competitor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_list"
                    android:scaleType="fitXY"
                    app:matchUrl="@{bean.playerImageUrl}"
                    app:round_corner="25dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_competitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@{bean.playerName}"
                        android:textColor="#dedede"/>
                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@{bean.score}"
                        android:textSize="12dp"
                        android:textColor="#dedede"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="@{bean.level}"
                android:textColor="@color/glory_item_text"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_level"
                android:layout_marginTop="5dp"
                android:text="@{bean.place}"
                android:textColor="@color/glory_item_text"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_level"
                app:layout_constraintEnd_toEndOf="@id/tv_level"/>
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_city"
                android:layout_marginTop="5dp"
                android:text="@{bean.date}"
                android:textColor="@color/glory_item_text"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_city"
                app:layout_constraintEnd_toEndOf="@id/tv_level"/>

        </com.king.app.tcareer.view.widget.rc.RCConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>