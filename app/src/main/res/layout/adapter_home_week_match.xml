<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/home_match_item_width"
        android:layout_height="wrap_content">

        <com.king.app.tcareer.view.widget.rc.RCImageView
            android:id="@+id/iv_match"
            android:layout_width="@dimen/home_match_width"
            android:layout_height="@dimen/home_match_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round_corner="8dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Match Name"
            android:textColor="@color/text_second"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/iv_match"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_match" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Country/City"
            android:textColor="@color/text_sub"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Level/Court"
            android:textColor="@color/text_sub"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_place"
            app:layout_constraintStart_toStartOf="@id/tv_name" />

    </android.support.constraint.ConstraintLayout>
</layout>