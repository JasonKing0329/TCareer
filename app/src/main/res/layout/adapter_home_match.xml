<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bean"
            type="com.king.app.tcareer.page.match.gallery.UserMatchBean"/>
    </data>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match_group"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/swipecard_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home_match_image"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_img"
                    app:matchUrl="@{bean.imageUrl}"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_marginTop="8dp"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_match_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{bean.nameBean.name}"
                    android:textColor="@color/swipecard_text_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/home_match_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@{bean.nameBean.matchBean.level}"
                    android:textColor="@color/swipecard_text_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/home_match_court"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@{bean.nameBean.matchBean.court}"
                    android:textColor="@color/swipecard_text_normal"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>