<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HomeTheme" parent="NoActionBarTheme">
        <!--toolbar的背景-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#eeeeee</item>
        <!--toolbar的文字颜色-->
        <item name="android:textColorPrimary">#3F51B5</item>
        <!--<item name="android:textColorSecondary">#00ff00</item>-->
        <item name="android:actionMenuTextColor">#3F51B5</item>
    </style>

    <style name="BASEDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/grayef</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoadingDialog" parent="BASEDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--透明Dialog-->
    <style name="BaseDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomDialogFragment">
        <item name="android:background">@color/dialog_background</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="CustomDialogIcon_L">
        <item name="android:background">@drawable/selector_custom_dialog_icon_bk_l</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CommonPlayerGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CommonPlayerName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="CommonPlayerH2h">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_actionbar_text_focus</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CommonMatchYear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="V7ActionbarActionIcon">
        <item name="android:layout_width">@dimen/view7_actionbar_action_icon_size</item>
        <item name="android:layout_height">@dimen/view7_actionbar_action_icon_size</item>
        <item name="android:padding">@dimen/view7_actionbar_action_icon_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MatchManageItem">
        <item name="android:textColor">#3c3c3c</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MatchManageItemSub">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
