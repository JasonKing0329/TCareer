<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--加载中对话框-->
    <declare-styleable name="CircularProgress">
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <!-- 圆形头像 -->
    <declare-styleable name="CircleImageView">
        <!-- 边框宽度 -->
        <attr name="civ_border_width" format="dimension" />
        <!-- 边框颜色 -->
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- 头像内填充色 -->
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SideBarParams">
        <attr name="sideBackground" />
        <attr name="indexTextSize" />
        <attr name="indexColor" />
        <attr name="indexColorFocus" />
    </declare-styleable>

    <declare-styleable name="CardSlider">
        <!-- Active card offset from start of RecyclerView. Default value is 50dp. -->
        <attr name="activeCardLeftOffset" format="dimension"/>
        <!-- Card width. Default value is 148dp. -->
        <attr name="cardWidth" format="dimension"/>
        <!-- Distance between cards. Default value is 12dp. -->
        <attr name="cardsGap" format="dimension"/>
        <!-- ViewUpdater implementation class. If not set, DefaultViewUpdater class is used. -->
        <attr name="viewUpdater" format="string"/>
    </declare-styleable>

    <declare-styleable name="FitSideBar">
        <attr name="android:gravity" />
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorFocus" format="color"/>
        <attr name="textSizeFocus" format="dimension"/>
        <attr name="minHorizontalPadding" format="dimension"/>
        <attr name="minWidth" format="dimension"/>
        <attr name="maxWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="minXCellWidth" format="dimension" />
        <attr name="minYCellHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BarChart">
        <attr name="barWidth" format="dimension" />
        <attr name="barGap" format="dimension" />
    </declare-styleable>

</resources>