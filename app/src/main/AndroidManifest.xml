<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.king.app.tcareer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- *****往sdcard中写入数据的权限******* -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- *****在sdcard中创建/删除文件的权限******* -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />

    <!-- *****samsung fingerprint sdk permission******* -->
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <application
        android:name=".base.TApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.samsung.android.sdk.multiwindow.enable"
            android:value="true" />
        <meta-data
            android:name="com.samsung.android.sdk.multiwindow.multiinstance.enable"
            android:value="true" />
        <meta-data
            android:name="com.sec.android.multiwindow.STYLE"
            android:value="fixedRatio" />
        <meta-data
            android:name="com.sec.android.support.multiwindow"
            android:value="true" />

        <activity android:name=".page.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".page.setting.SettingActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".page.match.common.MatchCommonActivity"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".page.match.manage.MatchManageActivity"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".page.match.page.MatchPageActivity"
            android:theme="@style/HomeTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".page.player.manage.PlayerManageActivity"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".page.player.common.PlayerCommonActivity"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".page.player.page.PlayerPageActivity"
            android:theme="@style/HomeTheme"
            android:screenOrientation="portrait"/>

    </application>

</manifest>